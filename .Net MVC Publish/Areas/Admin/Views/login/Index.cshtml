@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yönetici Girişi</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Modern Login Tema */
        :root {
            --primary-color: #007bff; /* Canlı mavi */
            --secondary-color: #f8f9fa; /* Açık gri */
            --card-background: #ffffff; /* Beyaz kart arka planı */
            --text-color: #212529; /* Koyu gri metin */
            --button-hover: #0056b3; /* Daha koyu mavi */
            --alert-background: #fff3cd; /* Uyarı arka planı */
            --alert-text: #856404; /* Uyarı metni */
        }

        body {
            background-color: var(--secondary-color);
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .form-signin {
            width: 100%;
            max-width: 400px;
            padding: 15px;
            background-color: var(--card-background);
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .form-signin h1 {
                color: var(--primary-color);
                font-weight: bold;
                margin-bottom: 20px;
            }

        .form-floating input {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .form-floating label {
            color: var(--text-color);
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            font-weight: bold;
            padding: 10px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--button-hover);
            }

        .checkbox label {
            font-size: 0.9rem;
            color: var(--text-color);
        }

        .alert-warning {
            background-color: var(--alert-background);
            color: var(--alert-text);
            border: 1px solid #ffeeba;
            border-radius: 5px;
            margin-top: 15px;
            padding: 10px;
        }

        p.text-muted {
            font-size: 0.9rem;
            color: var(--text-color) !important;
        }
    </style>
</head>
<body>
    <main class="form-signin">
        <form method="post">
            <h1 class="h3 mb-3 fw-normal">Yönetici Girişi</h1>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Kullanıcı Adı" name="kullaniciAdi" required>
                <label for="floatingInput">Kullanıcı Adı</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Şifre" name="sifre" required>
                <label for="floatingPassword">Şifre</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Beni hatırla
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
        </form>
        @{
            if (TempData["mesaj"] != null)
            {
                <div class="alert alert-warning text-center">
                    <h3>@TempData["mesaj"]</h3>
                </div>
            }
        }
    </main>

    <!-- Bootstrap 5 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
